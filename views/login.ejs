<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>express-login</title>
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body
    class="body-bg bg-gray-300 min-h-screen pt-12 md:pt-20 pb-6 px-2 md:px-10 font-mono"
  >
    <main class="bg-white max-w-lg mx-auto md:p-12 my-10 rounded-lg shadow-2xl">
      <section>
        <h3 class="font-bold text-2xl text-center">Welcome to Our Site</h3>
        <p class="text-gray-600 pt-2 text-center">Sign in to Your Account</p>
        <p class="text-gray-600 pt-2 text-center">
          <% if(messages.error){ messages.error } %>
        </p>
      </section>
      <section class="mt-10">
        <form action="/login" method="POST" class="flex flex-col">
          <div class="mb-6 pt-3 bg-gray-200">
            <lable
              class="block text-gray-700 text-sm font-bold mb-2 ml-3"
              for="Email"
              >Email</lable
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-gray-300 border-b-4 focus:border-purple-600 transition duration-500 px-3 pb-3"
            />
          </div>
          <div class="mb-6 pt-3 rounded bg-gray-200">
            <label
              for="Password"
              class="block text-gray-700 text-sm font-bold mb-2 ml-3"
              >Password</label
            >
            <input
              type="password"
              id="password"
              name="password"
              required
              class="bg-gray-200 rounder w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3"
            />
          </div>
          <div class="flex justify-end">
            <a
              href="#"
              class="text-sm text-purple-600 hover:text-purple-700 hover:underline mb-6"
              >Forgot your Password?</a
            >
          </div>
          <button
            class="bg-purple-600 hover:bg-purple-700 text-white text-lg font-bold py-4 rounded shadow-lg hover:shadow-xl transition duration-200"
            type="submit"
          >
            Sign In
          </button>
          <a
            class="bg-purple-600 hover:bg-purple-700 text-white text-center text-lg font-bold py-4 my-6 rounded shadow-lg hover:shadow-xl transition duration-200"
            href="/register"
          >
            Register
          </a>
        </form>
      </section>
    </main>
  </body>
</html>
